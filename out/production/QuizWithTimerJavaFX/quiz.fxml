<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20.0" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="QuizController">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <Label fx:id="questionLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" wrapText="true"/>
    <VBox fx:id="optionsBox" spacing="10"/>
    <ProgressBar fx:id="timerBar" prefWidth="300"/>
    <Label fx:id="feedbackLabel" style="-fx-text-fill: red;"/>
</VBox>